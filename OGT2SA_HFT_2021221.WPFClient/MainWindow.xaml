<Window x:Class="OGT2SA_HFT_2021221.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OGT2SA_HFT_2021221.WPFClient"
        mc:Ignorable="d"
        Title="WarshipDBEditor" Height="550" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid Background="CadetBlue">
        <StackPanel Background="Azure" VerticalAlignment="Center">
            <Button Command="{Binding AnimeCommand}" Content="Animes" Padding="10" Margin="10" FontSize="30" />
            <Button Command="{Binding CharacterCommand}" Content="Characters" Padding="10" Margin="10" FontSize="30" />
            <Button Command="{Binding StudioCommand}" Content="Studios" Padding="10" Margin="10" FontSize="30"/>
        </StackPanel>
    </Grid>
</Window>
